<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home" 
    tools:ignore="contentDescription">
           
    <ImageView
          android:id="@+id/whitebg2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:scaleType="fitXY"
          android:src="@drawable/whitebg2" />
        
    <ImageView
          android:id="@+id/greentop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="fitStart"
          android:src="@drawable/greenbg2" />

    <TextView
          android:id="@+id/hometxt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textStyle="normal"
          android:typeface="sans" />

    <Button
          android:id="@+id/emergencybutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imageView2"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="50dp"
          android:background="@drawable/button_custom_emergency"
          android:paddingBottom="@dimen/activity_vertical_margin" />
    
    <Button
          android:id="@+id/howtobutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/emergencybutton"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="15dp"
          android:background="@drawable/button_custom_gps" />

    <Button
          android:id="@+id/logoffbutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/howtobutton"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="20dp"
          android:background="@drawable/button_custom_signoff"
          android:paddingBottom="@dimen/activity_vertical_margin" />

    <ImageView
          android:id="@+id/imageView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignRight="@+id/logoffbutton"
          android:scaleType="fitStart"
          android:src="@drawable/fclogo4" />

</RelativeLayout>